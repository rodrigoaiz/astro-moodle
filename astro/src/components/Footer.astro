---
import Logo from "@/components/Logo.astro";
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import social from "@/config/social.json";
const { footer }: { footer: { name: string; url: string }[] } = menu;
import { Icon } from "astro-icon/components";
import LogoUNAM from "@/components/LogoUNAM.astro";
import LogoFacMed from "@/components/LogoFacMed.astro";
import LogoSuayedFM from "@/components/LogoSuayedFM.astro";
---

<footer class="relative mt-20">
  <!-- Separador decorativo -->
  <div class="h-px bg-gradient-to-r from-transparent via-white/20 to-transparent mb-10"></div>

  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 py-12">

      <!-- Logo y descripción -->
      <div class="text-center md:text-left">
        <div class="flex justify-center md:justify-start mb-6">
          <a href="/" class="group">
            <Logo class="h-12 md:h-16 group-hover:scale-110 transition-transform duration-300" />
          </a>
        </div>
        <p class="text-white/70 mb-6 max-w-xs mx-auto md:mx-0">
          Plataforma educativa moderna para la nueva generación de estudiantes.
        </p>

        <!-- Logos institucionales -->
        <div class="flex justify-center md:justify-start gap-4 items-center">
          <a href="https://www.unam.mx/" target="_blank" rel="noreferrer"
             class="group">
            <LogoUNAM class="size-8 fill-white/70 group-hover:fill-yellow-400 transition-all duration-300" />
          </a>
          <a href="https://cch.unam.mx/" target="_blank" rel="noreferrer"
             class="group">
            <LogoFacMed class="size-8 fill-white/70 group-hover:fill-yellow-400 transition-all duration-300" />
          </a>
          <a href="https://portalacademico.cch.unam.mx/" target="_blank" rel="noreferrer"
             class="group">
            <LogoSuayedFM class="h-6 fill-white/70 group-hover:fill-yellow-400 transition-all duration-300" />
          </a>
        </div>
      </div>

      <!-- Enlaces útiles -->
      <div class="text-center">
        <h3 class="text-white font-bold text-lg mb-4">Enlaces Útiles</h3>
        <ul class="space-y-3">
          {footer.map((menu) => (
            <li>
              <a href={menu.url}
                 class="text-white/70 hover:text-yellow-400 transition-colors duration-200 hover:scale-105 transform inline-block">
                {menu.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Redes sociales -->
      <div class="text-center md:text-right">
        <h3 class="text-white font-bold text-lg mb-4">Síguenos</h3>
        <div class="space-y-3">
          {social.main.map((socialItem) => (
            <a href={socialItem.link}
               target="_blank"
               rel="noopener noreferrer"
               class="flex items-center justify-center md:justify-end gap-3 text-white/70 hover:text-yellow-400 transition-all duration-200 hover:scale-105 group">
              <Icon name={socialItem.icon} class="w-5 h-5 group-hover:animate-float" />
              <span>{socialItem.name}</span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/10 pt-6 pb-8">
      <div class="text-center">
        <p class="text-white/60 text-sm" set:html={config.params.copyright} />
        <div class="mt-2 text-xs text-white/40">
          Hecho con ❤️ para estudiantes como tú
        </div>
      </div>
    </div>
  </div>
</footer>
